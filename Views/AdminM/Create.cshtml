@model GrozioSalonuISCF.Models.Miestas

@{
    ViewData["Title"] = "Pridėti";
}

<h1>Pridėti</h1>

<h4>Miestas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="pavadinimas" class="control-label"></label>
                <input asp-for="pavadinimas" class="form-control" />
                <span asp-validation-for="pavadinimas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Pridėti" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Atgal į sąrašą</a>
</div>

