@model GrozioSalonuISCF.Models.Salonas

@{
    ViewData["Title"] = "Edit";
}

<h1>Duomenų redagavimas</h1>

@*<h4>Salonas</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SalonasId" />
            <div class="form-group">
                <label asp-for="pavadinimas" class="control-label"></label>
                <input asp-for="pavadinimas" class="form-control" />
                <span asp-validation-for="pavadinimas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="imones_kodas" class="control-label"></label>
                <input asp-for="imones_kodas" class="form-control" />
                <span asp-validation-for="imones_kodas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="adresas" class="control-label"></label>
                <input asp-for="adresas" class="form-control" />
                <span asp-validation-for="adresas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tel_nr" class="control-label"></label>
                <input asp-for="tel_nr" class="form-control" />
                <span asp-validation-for="tel_nr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="email" class="control-label"></label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ikurimo_data" class="control-label"></label>
                <input asp-for="ikurimo_data" class="form-control" />
                <span asp-validation-for="ikurimo_data" class="text-danger"></span>
            </div>
     
            <div class="form-group">
                <label asp-for="Miestas.pavadinimas" class="control-label"></label>
                <select asp-for="MiestasId" class="form-control" asp-items="ViewBag.MiestasId"></select>
                <span asp-validation-for="MiestasId" class="text-danger"></span>
            </div>
 
            <div class="form-group">
                <input type="submit" value="Išsaugoti" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Atgal</a>
</div>

